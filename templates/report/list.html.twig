{% extends 'base.html.twig' %}

{% block body %}
    <h2>Liste des rapports d'absences : </h2>
    <div class="table-responsive">

        <table class="table table-striped table-bordered text-center">
            <thead>
            <tr>
                <th>Date</th>
                <th>Professeur</th>
                <th>Nombre d'élèves</th>
                <th>Nombre d'absents</th>
                <th>Nombre absences non justifiées</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for report in reports %}
                <tr>
                    <td>{{ report.date | date }}</td>
                    <td>{{ report.teacher.fullName }}</td>
                    <td>{{ report.studentsGroup | length }}</td>
                    <td>{{ report.studentsAbsent | length }}</td>
                    <td>{{ report.getNumberUnjustifiedAbsences }}</td>
                    <td><a class="btn btn-primary" href="{{ path('report_absence_show', {'id': report.id}) }}">Voir</a></td>
                    <td><a class="btn btn-primary" href="{{ path('report_absence_edit', {'id': report.id}) }}">Modifier</a></td>
                    <td><a class="btn btn-danger" href="{{ path('report_absence_delete', {'id': report.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}

{% block title %}
    Listes des rapports
{% endblock %}

