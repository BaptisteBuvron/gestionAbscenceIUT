{% set route_name = app.request.attributes.get('_route') %}

<aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3   bg-gradient-dark"
       id="sidenav-main">
    <div class="sidenav-header">
        <h2 class="text-white text-center mt-3">{{ app.user.fullName }}</h2>
    </div>
    <hr class="horizontal light mt-0 mb-2">
    <div class="collapse navbar-collapse w-auto max-height-vh-100" id="sidenav-collapse-main">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white {{ route_name == 'chart_organization' ? 'active bg-gradient-primary' : '' }}"
                   href="{{ path('chart_organization') }}">
                    <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                        <i class="material-icons opacity-10">person_pin</i>
                    </div>
                    <span class="nav-link-text ms-1">Trombinoscope</span>
                </a>
            </li>
            {% if is_granted('ROLE_YEAR_RESPONSIBLE') %}
                <li class="nav-item mt-3">
                    <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">
                        Administration</h6>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white {{ route_name == 'report_absences_list' ? 'active bg-gradient-primary' : '' }}"
                       href="{{ path('report_absences_list') }}">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">receipt_long</i>
                        </div>
                        <span class="nav-link-text ms-1">Rapports d'absences</span>
                    </a>
                </li>
            {% endif %}
            <li class="nav-item mt-3">
                <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">Compte</h6>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('app_logout') }}">
                    <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                        <i class="material-icons opacity-10">login</i>
                    </div>
                    <span class="nav-link-text ms-1">Déconnexion</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="sidenav-footer position-absolute w-100 bottom-0 ">
        <div class="mx-3">
            <a class="btn bg-gradient-primary mt-4 w-100" href="{{ path('new_report') }}" type="button">Créer un
                rapport</a>
        </div>
    </div>
</aside>


{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }} mt-5">
            {% for message in messages %}
                <p class="text-white">{{ message | raw }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}